{
  "name": "root",
  "repository": "https://gitlab.com/deepkit",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "closed",
  "scripts": {
    "test": "jest --coverage",
    "bootstrap": "lerna bootstrap --nohoist \\* --no-ci"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=12.2.0"
  },
  "dependencies": {
    "ws": "^6.1.2",
    "typescript": "^3.3.4000",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "ts-jest": "22.0.4",
    "jest-extended": "^0.11.0",
    "typescript": "^3.3.3333",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1"
  },
  "jest": {
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts}",
      "!**/node_modules/**",
      "!**/lib/**/*",
      "!**/*.d.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  }
}
